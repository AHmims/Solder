{
  "name": "Electroplanet",
  "description": "Electroplanet is a moroccan company specialised in selling different products such as appliances, TV, Hifi and Multimedia.",
  "baseUrl": "https://www.electroplanet.ma",
  "config": {
    "productPage": {
      "scrapMethod": "SSR",
      "fields": [
        {
          "type": "content",
          "key": "name",
          "value": ".detail-product-info .page-title"
        },
        {
          "type": "content",
          "key": "price",
          "value": ".detail-product-info .price-wrapper"
        },
        {
          "type": "exists",
          "key": "inStock",
          "value": ".stock-status.stock_status_30"
        }
      ]
    }
  }
}